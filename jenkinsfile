pipeline {
  agent any

  environment {
    AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
    AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
  }

  stages {
    stage('Clone') {
      steps {
        git 'https://github.com/Pruthvi56-Bobi/terraform-eks-project.git'
      }
    }

    stage('Init') {
      steps {
        sh 'terraform init'
      }
    }

    stage('Plan') {
      steps {
        sh 'terraform plan'
      }
    }

    stage('Apply') {
      steps {
        input "Do you want to apply the changes?"
        sh 'terraform apply -auto-approve'
      }
    }
  }
}
